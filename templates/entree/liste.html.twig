{% extends 'accueil.html.twig' %}

{% block title %}Gestion des entrees{% endblock %}
{% block titleh1 %}Gestion des entrees{% endblock %}
{% block Item %}Entrees{% endblock %}

{% block body %}
<div class=" row">
    <div class="container col-md-6">
        <div class="card ">
            <div class="card-header">Liste des achats</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Quantité achetée</th>
                        <th>Produit</th>
                    </tr>
                    {% for e in entrees %}
                        <tr>
                            <td>{{ e.id }}</td>
                            <td>{{ e.dateE |date('d/m/y') }}</td>
                            <td>{{ e.qteE }}</td>
                            <td>{{ e.produit }}</td>
                        </tr>
                    {%endfor %}
                </table>
            </div>
        </div>
</div>
<div class="container col-md-6">
    <div class="card ">
        <div class="card-header">Formulaire de gestion des achats</div>
        <div class="card-body">
            {{form(form)}}
        </div>
    </div>
</div>
</div>
{% endblock %}


